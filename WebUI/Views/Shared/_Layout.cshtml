<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-3.1.1.min.js"></script>
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="@Url.Action("List", "Phones")">Интернет-магазин</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @*<li><a href="#">Личный кабинет</a></li>*@
                    <li>@Html.Action("Summary", "Cart")</li>
                </ul>
            </div>
        </div>
    </div> 
    <div class="container w">
        <div class="row text-center">
            <br /><br />
            <div class="visible-xs">
                @Html.Action("Menu", "Nav", new { horizontalNav = true })
            </div>
            <div id="categories" class="col-xs-3 hidden-xs">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="col-md-8 col-xs-12">
                @RenderBody()
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="first-footer">
                    <div class="col-md-4 col-md-offset-1 col-xs-8">
                        <h4>Информация</h4>
                        <ul class="list-unstyled">
                            <li><a href="#"> Гарантия</a></li>
                            <li><a href="#"> Доставка</a></li>
                            <li><a href="#"> Политика</a></li>
                            <li><a href="@Url.Action("AboutUs","Company")">О нас</a></li>
                            <li><a href="@Url.Action("Contacts","Company")"> Контакты</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 col-xs-8">
                        <h4>Социальные сети</h4>
                        <ul class="list-unstyled">
                            <li>
                                <a href="https://vk.com/" target="_blank"><i class="fa fa-vk" aria-hidden="true"></i></a>
                                <a href="https://www.facebook.com" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                                <a href="https://twitter.com/" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                                <a href="https://www.instagram.com/" target="_blank"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-xs-8">
                        <h4>Служба поддержки</h4>
                        <ul class="list-unstyled">
                            <li><a href=@Url.Action("FeedBack", "Company")> Связаться с нами</a></li>
                            <li><a href="#"> Возврат товара</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
</html>